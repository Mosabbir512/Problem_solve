#include <bits/stdc++.h>
using namespace std;
#define ll long long
int main() {
	// your code goes here
    int t;cin>>t;
    while(t--){
        ll n;cin>>n;
        ll ans=0;
        int arr[n];
        for(auto &it:arr)cin>>it;
        vector<int>dp(n,0);
        for(auto it:arr){
            if(it)++ans;
        }
        for(int i=1;i<n;i++){
             if(arr[i-1]==1 && arr[i]==1){
                 dp[i]=i;
                 ll left=dp[i]-dp[i-1];
                 ll right=n-i;
                 ans+=(left*right);
             }
             else if(i>=2 && arr[i-2]==1 && arr[i-1]==0 && arr[i]==1){
                 ll left=i-dp[i-1]-1;
                 ll right=n-i;
                 ans+=(left*right);
                 dp[i-1]=i-1;
                 dp[i]=i-1;
             }
             
             if(dp[i]==0){
                 dp[i]=dp[i-1];
             }
        }
        cout<<ans<<endl;
    }
}
